<h1>Listing pros</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Localhost</th>
      <th>Url</th>
      <th>Des</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pros.each do |pro| %>
      <tr>
        <td><%= pro.name %></td>
        <td><%= pro.localhost %></td>
        <td><%= pro.url %></td>
        <td><%= pro.des %></td>

        <td><%= link_to 'Show', pro %></td>
        <td><%= link_to 'Edit', edit_pro_path(pro) %></td>
        <td><%= link_to 'Destroy', pro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

